<%= render 'shared/header', text:"All Groups", path:users_path %>
<div class='border-b border-r border-l'>
  <div class='px-2 pt-2 pb-2 flex items-start flex-wrap'>
    <div class="w-full md:w-2/3 pr-0 md:pr-6 mb-6">
      <%@groups.each do |group|%>
        <%=link_to group do %>
          <div class="py-6">
            <div class="flex  max-w-md bg-white shadow-lg rounded-lg overflow-hidden">
              <img class="w-1/3 h-auto lg:h-full object-cover object-center w-auto" src="<%= group.icon %>"/>
              
              <div class="w-2/3 p-4">
                <h1 class="text-gray-900 font-bold text-2xl"><%=group.name%></h1>
                <div class="flex item-center justify-between mt-3">
                  <span><p class="text-gray-600 font-normal text-sm inline-block"><%= group.created_at.strftime("%m/%d/%Y")%></p></span>
                </div>
              </div>
            </div>
           </div>
        <%end%>
      <%end%>
      <div class="text-center mt-6">
        <%= link_to 'NEW GROUP', new_group_path,class:'btn btn-outline ' %>
      </div>

    </div>
  </div>
</div>