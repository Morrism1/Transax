<div class="container w-full max-w-md mx-auto my-6">
  <div class="bg-white shadow-md rounded-lg px-8 pt-6 pb-8">
    <h2 class='text-center text-lg'>New transaction</h2>
    <%= form_with(model:@transaction,scope:"transaction",local:true)do |f| %>
      <fieldset class='mb-6'>
        <%= f.label :name, 'Name', class: 'label block text-sm font-medium leading-5 text-gray-700' %>
        <%= f.text_field :name ,id:"name", class: 'input appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-5' %>
      </fieldset>

      <fieldset class='mb-6'>
        <%= f.label :amount, 'Amount', class: 'label block text-sm font-medium leading-5 text-gray-700' %>
        <%= f.number_field :amount,id:"amount", class: 'input appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-5' %>
      </fieldset>

    <fieldset>
    <div class="mb-6 w-full lg:w-2/5">
      <div class="relative">
        <%= f.label :group_id, "Group",class:"label", class: 'label block text-sm font-medium leading-5 text-gray-700' %>
        <%= f.select :group_id, [["select Group",nil]]+Group.all.collect {|x| [x.name, x.id]}, {}, class: "select" %>
        <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
          <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/></svg>
        </div>
      </div>
  </div>
    </fieldset>

      <%= f.submit "Register",class:'btn btn-green px-24 text-center mx-6' %>
    <% end %>
  </div>
</div>

