
<header class="w-full flex justify-between h-10  space-x-16  pr-36 pt-6 h-16 self-start bg-blue-600">
 <%= link_to root_path do %>
		<svg class="h-12 w-12 text-black"  width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">  <path stroke="none" d="M0 0h24v24H0z"/>  <line x1="5" y1="12" x2="19" y2="12" />  <line x1="5" y1="12" x2="9" y2="16" />  <line x1="5" y1="12" x2="9" y2="8" /></svg>
  <% end %>
			<div class="text-lg text-center font-black ">SIGNUP</div>

		<div><%= link_to "Login", login_path, class:' btn-small mr-2 absolute' %></div>
</header>

<div class="w-full max-w-md mx-auto my-6">
  <div class="bg-white shadow-md rounded-lg px-8 pt-6 pb-8">
    <%= form_for(@user) do |f| %>
			
			<div class="mb-6">
				<%= f.label :name, class: 'label block text-sm font-medium leading-5 text-gray-700' %><br />
				<%= f.text_field :name, class: 'input appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-5' %>
			</div>
      <div class='mb-6 text-center'>
      <%= f.submit "Sign Up", class: "btn btn-green px-24" %>
      </div>

		<% end %>
  </div>
</div>