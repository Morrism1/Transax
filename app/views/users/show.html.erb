<% provide(:title, @user.name) %>
<div class="container dashboard h-screen bg-gradient-to-r from-blue-600 text-center via-blue-500 to-blue-700 py-12">
  <div class="flex flex-col justify-center items-center">
    <div class="gravatar ">
    <%= gravatar_for @user %>
    </div>
    <h1 class="text-white text-semibold"><%= @user.name%></h1>
  </div>
  <div class="flex px-16 my-6 flex-col">
    <div class="flex">
      <svg class="w-6 h-6 text-black" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path></svg>
      <%= link_to  "All Groups", groups_path ,class:"text-white text-semibold pl-3 mb-6"%>
    </div>
    <div class="flex">
      <svg class="w-6 h-6 text-black" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
      <%= link_to  "My Transactions", transactions_path,class:"text-white text-semibold pl-3 mb-6" %>
    </div>
    <div class="flex">
      <svg class="w-6 h-6 text-black" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path></svg>
      <%= link_to  "My External Transactions", external_path ,class:"text-white pl-3 text-semibold mb-6"%>
    </div>
  </div>
  <div class="botton-b">
     <%= link_to 'LOGOUT', logout_path,method: :delete,class:'btn btn-outline text-white' %>
  </div>
</div>